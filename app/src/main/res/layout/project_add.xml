<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".fragments.add.ProjectAddFragment">

    <EditText
        android:id="@+id/addProjectName"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="180dp"
        android:autofillHints="@string/ProjectName"
        android:ems="10"
        android:hint="@string/ProjectName"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addResults"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:autofillHints="@string/Results"
        android:ems="10"
        android:hint="@string/Results"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/addProjectName"
        app:layout_constraintTop_toTopOf="@+id/addProjectName" />

    <EditText
        android:id="@+id/addGoals90"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:autofillHints="@string/Goals90"
        android:ems="10"
        android:hint="@string/Goals90"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addProjectName" />

    <EditText
        android:id="@+id/addGoals2W"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/Goals2W"
        android:autofillHints="@string/Goals2W"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/addGoals90"
        app:layout_constraintTop_toTopOf="@+id/addGoals90" />

    <EditText
        android:id="@+id/addActions"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:autofillHints="@string/Actions"
        android:ems="10"
        android:hint="@string/Actions"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addGoals90" />

    <EditText
        android:id="@+id/addNotes"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/Notes"
        android:autofillHints="@string/Notes"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/addActions"
        app:layout_constraintTop_toTopOf="@+id/addActions" />

    <Button
        android:id="@+id/addProject_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/AddProject"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addNotes"
        app:layout_constraintVertical_bias="0.10" />

</androidx.constraintlayout.widget.ConstraintLayout>